
<%- include('partials/header') %>

    <div class="container full-height d-flex align-items-center justify-content-center">
        <div class="container w-30"> <!-- Container para centralizar o conteúdo -->
            <div class="card p-5">
                <div class="card-header">
                    <h3 class="mb-4">Realizar Pergunta</h3>    
                </div>
                <div class="card-body">
                    <form method="POST" action="/salvarpergunta">
                        <label class="form-label mb-2">Título</label>
                        <input type="text" class="form-control mb-3" placeholder="Insira o título" name="titulo">
                        <label class="form-label">Descrição</label>
                        <textarea class="form-control mb-4" rows="4" placeholder="Insira a descrição" name="descricao"></textarea>
                        <button class="btn btn-primary">Perguntar</button>  
                    </form>         
                </div>
            </div>
        </div>
    
    </div>
