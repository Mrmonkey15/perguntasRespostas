<%- include('partials/header') %>

<div class="container">
    <div class="body-card">

    <h1><%= pergunta.titulo %></h1>
    <p><%= pergunta.descriçao %></p>
    <form action="/responder"method="POST">
        <h3>Responda</h3>
        <label >Resposta</label>
        <textarea name="corpo" class="form-control" placeholder="Digite sua Respostas"></textarea>
        <br>
        <input type="hidden" value="<%= pergunta.id%>" name="idPergunta">  
        <!-- O input acima será usado para obter o id da pergunta, na tabela -->
        <button type="submit" class="btn btn-primary">Responder</button>
        <hr>
        <h3>Respostas</h3>
        <%respostas.forEach(resposta=>{%>
            <%= resposta.corpo%><br>  
        <% })%>
        

    </form>

    </div>      
</div>


<%- include('partials/footer') %>
