<%- include('partials/header') %>

<div class="container">
    <hr>
    <h1>Perguntas</h1>
    <a href="/perguntar">Perguntar</a>
    <hr>
    <% perguntas.forEach(pergunta => { %>
        <br>
        <div class="card">
            <div class="card-body">
                <%= pergunta.titulo %>
            </div>
            <div class="card-footer">
                <button class="btn btn-primary">Responder</button>
            </div>
        </div>
    <% }) %>
</div>

<%- include('partials/footer') %>
